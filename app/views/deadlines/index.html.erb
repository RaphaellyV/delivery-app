<h2>Tabela de Prazos</h2>

<nav><%= link_to 'Cadastrar Prazo', new_deadline_path %></nav>

<% if @deadlines.any? %>
  <table>
    <thead>
      <tr>
        <th>Distância</th>
        <th>Prazo</th>
        <th>Editar Campos</th>
      </tr>
    </thead>
    <tbody>
      <%= @deadlines.each do |d| %>
        <tr>
          <td><%= d.min_distance %> a <%= d.max_distance %></td> km
          <td><%= d.max_days %></td> dias úteis
          <td><%=link_to('Editar', edit_deadline_path(d))%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem prazos cadastrados.</p>
<% end %>
  