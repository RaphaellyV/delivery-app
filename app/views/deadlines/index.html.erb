<h2>Tabela de Prazos</h2>

<nav><%= link_to 'Cadastrar Prazo', new_deadline_path %></nav>

<% if @deadlines.any? %>
  <table>
    <thead>
      <tr>
        <th>Distância</th>
        <th><%= Deadline.human_attribute_name(:max_days) %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @deadlines.each do |d| %>
        <tr>
          <td><%= d.min_distance %> a <%= d.max_distance %> km</td> 
          <td><%= d.max_days %> dias úteis</td> 
          <td><%=link_to('Editar', edit_deadline_path(d))%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem prazos cadastrados.</p>
<% end %>
  