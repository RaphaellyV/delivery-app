<h2>Tabela de Preços</h2>

<nav><%= link_to 'Cadastrar Preço', new_price_path %></nav>

<% if @prices.any? %>
  <table>
    <thead>
      <tr>
        <th>Volume</th>
        <th>Peso</th>
        <th>Preço por km</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @prices.each do |price| %>
        <tr>
          <td><%= number_with_precision(price.min_vol, precision: 3, significant: true) %> a <%= number_with_precision(price.max_vol, precision: 3, significant: true) %> m³</td> 
          <td><%= number_with_precision(price.min_weight, precision: 1) %> a <%= number_with_precision(price.max_weight, precision: 1) %> kg</td> 
          <td><%= number_to_currency(price.price_per_km) %></td>
          <td><%=link_to('Editar', edit_price_path(price))%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem preços cadastrados.</p>
<% end %>
  