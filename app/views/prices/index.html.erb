<h2>Tabela de Preços</h2>

<nav><%= link_to 'Cadastrar Preço', new_price_path %></nav>

<% if @prices.any? %>
  <table>
    <thead>
      <tr>
        <th>Volume</th>
        <th>Peso</th>
        <th>Preço por km</th>
        <th>Editar Campos</th>
      </tr>
    </thead>
    <tbody>
      <%= @prices.each do |price| %>
        <tr>
          <td><%= price.min_vol %> a <%= price.max_vol %></td> m³
          <td><%= price.min_weight %> a <%= price.max_weight %></td> kg
          <td>R$ <%= price.price_per_km %></td>
          <td><%=link_to('Editar', edit_price_path(price))%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem preços cadastrados.</p>
<% end %>
  